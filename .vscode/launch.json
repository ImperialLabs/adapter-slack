{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sinatra-rvm",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/bin/rackup",
            "args": [
                "-E", "development",
                "-o", "0.0.0.0",
                "-p", "4567"
            ],
            "useBundler": true,
            "pathToBundler": "${env:HOME}/.rvm/gems/${env:rvm_ruby_string}/wrappers/bundle",
            "showDebuggerOutput": true,
            "pathToRDebugIDE": "${workspaceRoot}/bin/rdebug-ide"
        },
        {
            "name": "Sinatra-rbenv",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/bin/rackup",
            "args": [
                "-E", "development",
                "-o", "0.0.0.0",
                "-p", "4567"
            ],
            "useBundler": true,
            "pathToBundler": "${env:HOME}/.rbenv/shims/bundle",
            "showDebuggerOutput": true,
            "pathToRDebugIDE": "${workspaceRoot}/bin/rdebug-ide"
        }
    ]
}
